{
  "name": "pixivExtension",
  "description": "pixiv用補助機能。pixiv「人気のタグ」のサムネイルhrefを書き換えます。ついでにコンテキストメニューに選択文字列をpixivで検索する機能を追加します。",
  "version": "1.0",
  "manifest_version": 3,
  
  "content_scripts": [
    {
      "matches": [
        "https://www.pixiv.net/*"
      ],
      "js": ["index.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "icons": {
    "48": "img/logo_icon.png"
  }
}